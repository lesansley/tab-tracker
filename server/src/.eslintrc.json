{
    "parser": "babel-eslint",
    "parserOptions": {
    	"ecmaVersion": "6"
    },
    "env": {
    	"node": "true"
    },
    "extends": "standard",
    "rules": {
    // allow async-await
    "generator-star-spacing": "off",
    "indent": ["error", "2"],
    "no-mixed-spaces-and-tabs": "error",
    "semi": ["error", "always"]
  }
}
